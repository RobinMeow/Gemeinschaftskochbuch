{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // ui
    {
      "name": "ng serve",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/",
      "cwd": "${workspaceRoot}/ui", // this is to have the 'ng serve' command executed in the ui directory
      "webRoot": "${workspaceFolder}/ui" // this is enables the debug mode, to hit breakpoints (and probably other things as well)
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html",
      "cwd": "${workspaceRoot}/ui",
      "webRoot": "${workspaceFolder}/ui"
    },

    // api
    {
      // Use IntelliSense to find out which attributes exist for C# debugging
      // Use hover for the description of the existing attributes
      // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
      "name": ".NET Core Launch (webapi)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/api/bin/Debug/net7.0/api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/api",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "presentation": {
        "webRoot": "${workspaceFolder}/api"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "presentation": {
        "cwd": "${workspaceFolder}/api",
        "webRoot": "${workspaceFolder}/api"
      }
    }
  ]
}
